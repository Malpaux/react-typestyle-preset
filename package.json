{
  "name": "react-typestyle-preset",
  "version": "0.3.1",
  "description": "A preset combining React-TypeStyle, React-TypeStyle-Inline and a couple of useful plugins",
  "keywords": [
    "react",
    "inline",
    "css",
    "style",
    "typestyle",
    "types",
    "typescript",
    "js",
    "config",
    "setup",
    "settings",
    "prefixer",
    "auto"
  ],
  "homepage": "https://github.com/Malpaux/react-typestyle-preset#readme",
  "bugs": {
    "url": "https://github.com/Malpaux/react-typestyle-preset/issues"
  },
  "license": "BSD-3-Clause",
  "author": "Malpaux (malpaux.com)",
  "contributors": [
    {
      "name": "Paul Brachmann",
      "email": "paul.brachmann@malpaux.com"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Malpaux/react-typestyle-preset.git"
  },
  "scripts": {
    "build": "tsc -p ./tsconfig.prod.json -d",
    "clean": "rimraf dist",
    "lint": "tslint --project tsconfig.json",
    "lint:fix": "tslint --project tsconfig.json --fix",
    "test": "jest --env=jsdom",
    "test:coverage": "jest --env=jsdom --coverage"
  },
  "dependencies": {
    "inline-style-prefixer": "^3.0.6"
  },
  "devDependencies": {
    "@types/enzyme": "^2.8.2",
    "@types/jest": "^20.0.2",
    "@types/react": "^15.0.38",
    "enzyme": "^2.9.1",
    "jest": "^20.0.4",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-test-renderer": "^15.6.1",
    "react-typestyle": "^0.3.0",
    "react-typestyle-inline": "^0.3.0",
    "rimraf": "^2.6.1",
    "ts-jest": "^20.0.7",
    "tslint": "^5.5.0",
    "tslint-config-airbnb": "^5.2.1",
    "tslint-react": "^3.0.0",
    "typescript": "^2.4.2",
    "typestyle": "^1.3.7"
  },
  "peerDependencies": {
    "react-typestyle": "^0.3.0",
    "react-typestyle-inline": "^0.3.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "mapCoverage": true,
    "roots": [
      "<rootDir>/src/"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(ts|tsx|js)$",
    "testPathIgnorePatterns": [
      "<rootDir>/(build|dist|docs|node_modules)/"
    ],
    "testEnvironment": "node"
  }
}
