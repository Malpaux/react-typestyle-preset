{
  "name": "react-typestyle-preset",
  "version": "0.3.1",
  "description": "A preset combining React-TypeStyle, React-TypeStyle-Inline and a couple of useful plugins",
  "keywords": [
    "react",
    "inline",
    "css",
    "style",
    "typestyle",
    "types",
    "typescript",
    "js",
    "config",
    "setup",
    "settings",
    "prefixer",
    "auto"
  ],
  "homepage": "https://github.com/Malpaux/react-typestyle-preset#readme",
  "bugs": {
    "url": "https://github.com/Malpaux/react-typestyle-preset/issues"
  },
  "license": "BSD-3-Clause",
  "author": "Malpaux (malpaux.com)",
  "contributors": [
    {
      "name": "Paul Brachmann",
      "email": "paul.brachmann@malpaux.com"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Malpaux/react-typestyle-preset.git"
  },
  "scripts": {
    "build": "tsc -p ./tsconfig.prod.json -d",
    "clean": "rimraf dist",
    "lint": "tslint -p tsconfig.json",
    "lint:fix": "tslint -p tsconfig.json --fix",
    "test": "jest --env=jsdom",
    "test:coverage": "jest --env=jsdom --coverage"
  },
  "dependencies": {
    "inline-style-prefixer": "^4.0.0"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.8",
    "@types/enzyme-adapter-react-16": "^1.0.1",
    "@types/jest": "^22.1.2",
    "@types/node": "^9.4.4",
    "@types/react": "^16.0.36",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "jest": "^22.2.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-test-renderer": "^16.2.0",
    "react-typestyle": "^0.3.1",
    "react-typestyle-inline": "^0.3.2",
    "rimraf": "^2.6.2",
    "ts-jest": "^22.0.3",
    "tslint": "^5.9.1",
    "tslint-config-airbnb": "^5.6.0",
    "tslint-react": "^3.4.0",
    "typescript": "^2.7.1",
    "typestyle": "^1.7.1"
  },
  "peerDependencies": {
    "react-typestyle": "^0.3.3",
    "react-typestyle-inline": "^0.3.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "mapCoverage": true,
    "roots": [
      "<rootDir>/src/"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(ts|tsx|js)$",
    "testPathIgnorePatterns": [
      "<rootDir>/(build|dist|docs|node_modules)/"
    ],
    "testEnvironment": "node"
  }
}
